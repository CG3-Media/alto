<div class="flex justify-between items-center<%= " #{local_assigns[:container_class]}" if local_assigns[:container_class] %>">
  <h1 class="text-2xl font-bold text-gray-900<%= " #{local_assigns[:title_class]}" if local_assigns[:title_class] %>">
    <%= title %>
  </h1>

  <% if local_assigns[:actions].present? %>
    <div class="flex items-center space-x-4">
      <% actions.each do |action| %>
        <% if action[:type] == :link %>
          <%= link_to action[:text], action[:path],
              class: action[:class] || "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        <% elsif action[:type] == :button %>
          <%= button_to action[:text], action[:path],
              method: action[:method] || :post,
              class: action[:class] || "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium",
              **action.fetch(:options, {}) %>
        <% else %>
          <%= raw action[:html] if action[:html] %>
        <% end %>
      <% end %>
    </div>
  <% elsif block_given? %>
    <div class="flex items-center space-x-4">
      <%= yield %>
    </div>
  <% end %>
</div>
