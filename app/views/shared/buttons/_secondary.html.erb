<%
  # Default values
  text ||= "Button"
  size ||= "medium"  # small, medium, large
  type ||= "button"   # button, submit
  disabled ||= false
  url ||= nil         # For link_to usage
  method ||= nil      # For link_to usage
  additional_classes ||= ""
  html_options ||= {}

  # Size classes
  size_classes = case size
                when "small"
                  "px-3 py-1.5 text-xs"
                when "large"
                  "px-6 py-3 text-base"
                else
                  "px-4 py-2 text-sm"
                end

  # Base classes
  base_classes = "#{size_classes} font-medium rounded-md border shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"

  # State classes
  if disabled
    state_classes = "bg-gray-100 border-gray-200 text-gray-400 cursor-not-allowed"
  else
    state_classes = "bg-white border-gray-300 text-gray-700 hover:bg-gray-50"
  end

  # Final classes
  final_classes = "#{base_classes} #{state_classes} #{additional_classes}".strip
%>

<% if url %>
  <%= link_to text, url,
      method: method,
      class: final_classes,
      **html_options %>
<% else %>
  <button type="<%= type %>"
          class="<%= final_classes %>"
          <%= "disabled" if disabled %>
          <% html_options.each do |key, value| %>
            <%= key %>="<%= value %>"
          <% end %>>
    <%= text %>
  </button>
<% end %>
