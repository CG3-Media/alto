<header class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-20">
  <div class="flex justify-between items-center py-4 px-4 sm:px-6 lg:px-8">
    <div class="flex items-center space-x-6">
      <!-- Mobile menu button -->
      <button onclick="toggleMobileSidebar()" class="lg:hidden -ml-2 mr-2 p-2 text-gray-600 hover:text-gray-900">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- App Name/Logo -->
      <%= link_to alto.home_path, class: "text-xl font-semibold text-gray-900" do %>
        <%= app_name %>
      <% end %>
    </div>

    <!-- Search Bar & New Ticket (only show on ticket pages) -->
    <% if defined?(current_board) && current_board %>
      <div class="hidden md:flex items-center space-x-4 <%= can_access_admin? ? 'flex-1 max-w-2xl mx-8' : 'ml-auto' %>">
        <!-- Search Bar -->
        <div class="<%= can_access_admin? ? 'flex-1' : 'w-80' %>">
          <%= form_with url: alto.board_tickets_path(current_board), method: :get, local: true, class: "flex w-full" do |form| %>
            <div class="relative flex-1">
              <%= form.text_field :search,
                  value: params[:search],
                  placeholder: "Search #{current_board_item_name.pluralize}...",
                  class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-l-md focus:ring-blue-500 focus:border-blue-500 text-sm" %>
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
            <%= form.hidden_field :status, value: params[:status] %>
            <%= form.hidden_field :sort, value: params[:sort] %>
            <%= render 'shared/buttons/secondary',
                text: "Search",
                type: "submit",
                additional_classes: "rounded-r-md rounded-l-none border border-l-0 border-gray-300" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Right side: Mobile actions + Admin -->
    <div class="flex items-center space-x-2">
      <!-- Mobile Quick Actions (only show on ticket pages) -->
      <% if defined?(current_board) && current_board %>
        <div class="flex items-center space-x-2 md:hidden">
          <!-- Mobile Search Button -->
          <%= render 'shared/buttons/icon',
              icon: '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>',
              onclick: "toggleMobileSearch()" %>

          <!-- Mobile New Ticket Button -->
          <% if can_submit_tickets? %>
            <%= render 'shared/buttons/icon',
                icon: '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>',
                variant: "success",
                url: alto.new_board_ticket_path(current_board) %>
          <% end %>
        </div>
      <% end %>

      <!-- Global Activity & Admin Buttons -->
      <% if can_access_admin? %>
        <%= render 'shared/button',
            text: "Activity",
            url: alto.activity_path,
            button_type: :tertiary,
            additional_classes: "hidden sm:block" %>
        <%= render 'shared/button',
            text: "Admin",
            url: alto.admin_dashboard_path,
            button_type: :tertiary,
            additional_classes: "hidden sm:block" %>
        <!-- Mobile Buttons (icon only) -->
        <%= render 'shared/buttons/icon',
            icon: '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
            variant: "tertiary",
            url: alto.activity_path,
            additional_classes: "sm:hidden" %>
        <%= render 'shared/buttons/icon',
            icon: '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>',
            variant: "tertiary",
            url: alto.admin_dashboard_path,
            additional_classes: "sm:hidden" %>
      <% end %>
    </div>
  </div>

  <!-- Mobile Search Dropdown (hidden by default) -->
  <% if defined?(current_board) && current_board %>
    <div id="mobile-search" class="hidden md:hidden bg-white border-t border-gray-200 px-4 py-3">
      <%= form_with url: alto.board_tickets_path(current_board), method: :get, local: true, class: "flex space-x-2" do |form| %>
        <div class="flex-1">
          <%= form.text_field :search,
              value: params[:search],
              placeholder: "Search #{current_board_item_name.pluralize}...",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
        <%= form.hidden_field :status, value: params[:status] %>
        <%= form.hidden_field :sort, value: params[:sort] %>
        <%= render 'shared/buttons/primary',
            text: "Search",
            type: "submit",
            size: "small",
            additional_classes: "whitespace-nowrap" %>
      <% end %>
    </div>
  <% end %>
</header>

<script>
function toggleMobileSearch() {
  const dropdown = document.getElementById('mobile-search');
  dropdown.classList.toggle('hidden');

  // Focus on search input when opened
  if (!dropdown.classList.contains('hidden')) {
    const input = dropdown.querySelector('input[name="search"]');
    setTimeout(() => input.focus(), 100);
  }
}
</script>
