<header class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-20">
  <div class="flex justify-between items-center py-3 px-4 sm:py-4 sm:px-6 lg:px-8">
    <!-- Mobile: Only show Menu button -->
    <div class="flex items-center sm:hidden">
      <button onclick="toggleMobileSidebar()" class="flex items-center space-x-2 p-2 text-gray-700 hover:text-gray-900">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <span class="text-sm font-medium">Menu</span>
      </button>
    </div>

    <!-- Desktop: Full header layout -->
    <div class="hidden sm:flex items-center space-x-6 min-w-0 flex-1">
      <!-- Mobile menu button for lg breakpoint -->
      <button onclick="toggleMobileSidebar()" class="lg:hidden -ml-2 mr-1 p-2 text-gray-600 hover:text-gray-900 flex-shrink-0">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- App Name/Logo -->
      <%= link_to alto.home_path, class: "text-lg sm:text-xl font-semibold text-gray-900 flex-shrink-0" do %>
        <%= app_name %>
      <% end %>
    </div>

    <!-- Search Bar (desktop only) -->
    <% if defined?(current_board) && current_board %>
      <div class="hidden sm:flex flex-1 max-w-sm sm:max-w-md lg:max-w-lg mx-4 sm:mx-6">
        <%= form_with url: alto.board_tickets_path(current_board), method: :get, local: true, class: "flex w-full" do |form| %>
          <div class="relative flex-1">
            <%= form.text_field :search,
                value: params[:search],
                placeholder: "Search...",
                class: "w-full pl-8 sm:pl-10 pr-3 py-2 border border-gray-300 rounded-l-md focus:ring-blue-500 focus:border-blue-500 text-sm" %>
            <div class="absolute inset-y-0 left-0 pl-2 sm:pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>
          <%= form.hidden_field :status, value: params[:status] %>
          <%= form.hidden_field :sort, value: params[:sort] %>
          <%= render 'shared/buttons/secondary',
              text: "Go",
              type: "submit",
              size: "small",
              additional_classes: "rounded-r-md rounded-l-none border border-l-0 border-gray-300 px-3 sm:px-4" %>
        <% end %>
      </div>
    <% end %>

    <!-- Right side: Actions (desktop only) -->
    <div class="hidden sm:flex items-center space-x-2 flex-shrink-0">


      <!-- Admin Actions -->
      <% if can_access_admin? %>
        <%= render 'shared/buttons/icon',
            icon: '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
            variant: "tertiary",
            url: alto.activity_path,
            additional_classes: "sm:hidden" %>
        <%= render 'shared/buttons/icon',
            icon: '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>',
            variant: "tertiary",
            url: alto.admin_dashboard_path,
            additional_classes: "sm:hidden" %>

        <%= render 'shared/button',
            text: "Activity",
            url: alto.activity_path,
            button_type: :tertiary,
            additional_classes: "hidden sm:block" %>
        <%= render 'shared/button',
            text: "Admin",
            url: alto.admin_dashboard_path,
            button_type: :tertiary,
            additional_classes: "hidden sm:block" %>
      <% end %>
    </div>
  </div>
</header>
