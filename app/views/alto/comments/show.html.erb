<div class="space-y-6">
  <!-- Thread Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center space-x-3 mb-4">
      <h1 class="text-xl font-bold text-gray-900">💬 Discussion Thread</h1>
    </div>

    <div class="text-sm text-gray-600 mb-4">
      From ticket: <%= link_to @ticket.title, alto.board_ticket_path(@board, @ticket),
                               class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>

    <!-- Original Thread Comment -->
    <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-blue-500">
            <div class="text-sm text-gray-500 mb-2 flex items-center space-x-2">
        <%= render 'alto/shared/user_avatar', user_id: @root_comment.user_id, size: :sm %>
        <div>
          <span class="font-medium text-gray-700"><%= user_display_name(@root_comment.user_id) %></span>
          started this thread · <%= time_ago_in_words(@root_comment.created_at) %> ago
        </div>
      </div>
      <div class="prose max-w-none mb-3">
        <p class="text-gray-700 whitespace-pre-wrap"><%= @root_comment.content %></p>
      </div>

      <!-- Attached Image -->
      <%= render 'alto/shared/attached_image', record: @root_comment, size: :small %>

      <!-- Original Comment Upvote -->
      <div class="flex items-center">
        <%= upvote_button(@root_comment, current_user) %>
      </div>
    </div>
  </div>

  <!-- Thread Replies -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">
        Replies (<%= @thread_comments[:replies].size %>)
      </h2>
    </div>

    <!-- Reply Form -->
    <% if can_comment? && @ticket.can_be_commented_on? && @root_comment.can_be_replied_to? %>
      <div class="p-6 border-b border-gray-200 bg-blue-50">
                        <%= form_with url: alto.board_ticket_comments_path(@board, @ticket),
                      method: :post,
                      local: true, class: "space-y-4" do %>
          <%= hidden_field_tag 'comment[parent_id]', @root_comment.id %>

                    <div class="text-sm text-gray-600 mb-2 flex items-center space-x-2">
            <%= render 'alto/shared/user_avatar', user_id: current_user.id, size: :sm %>
            <span>Replying to this thread as <span class="font-medium text-gray-700"><%= user_display_name(current_user.id) %></span></span>
          </div>
          <div>
            <%= text_area_tag 'comment[content]', '', placeholder: "Add your reply to this thread...", rows: 3,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <!-- Image Upload for Reply -->
          <% if ::Alto.configuration.image_uploads_enabled %>
            <div class="image-upload-component">
              <%= file_field_tag 'comment[images][]',
                  direct_upload: true,
                  multiple: false,
                  accept: "image/png,image/jpeg,image/jpg",
                  class: "hidden image-file-input" %>

              <div class="upload-button-container">
                <button type="button"
                        class="upload-trigger inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-xs font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                  </svg>
                  Attach image
                </button>
                <p class="mt-1 text-xs text-gray-500">Optional, max 10MB</p>
              </div>

              <div class="image-preview-container" style="display: none;">
                <div class="relative inline-block">
                  <div class="border border-gray-200 rounded-lg overflow-hidden bg-gray-50">
                    <img class="w-20 h-20 object-cover preview-image" src="" alt="">
                  </div>
                  <button type="button"
                          class="remove-button absolute -top-1 -right-1 bg-red-500 text-white rounded-full w-4 h-4 flex items-center justify-center text-xs hover:bg-red-600 focus:outline-none focus:ring-1 focus:ring-red-500 transition-colors"
                          title="Remove image">
                    ×
                  </button>
                </div>
              </div>

              <div class="upload-loading flex items-center space-x-2 text-xs text-gray-600" style="display: none;">
                <svg class="animate-spin h-3 w-3" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Uploading...</span>
              </div>

              <div class="upload-error mt-1 text-xs text-red-600" style="display: none;"></div>
            </div>
          <% end %>

          <div class="flex justify-end">
            <%= submit_tag "Post Reply",
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    <% elsif @ticket.locked? %>
      <div class="p-6 border-b border-gray-200 bg-red-50">
        <p class="text-red-600 text-sm">🔒 This ticket is locked. No new replies can be added.</p>
      </div>
    <% elsif !@root_comment.can_be_replied_to? %>
      <div class="p-6 border-b border-gray-200 bg-yellow-50">
        <p class="text-yellow-600 text-sm">⚠️ This thread has reached the maximum reply depth.</p>
      </div>
    <% end %>

    <!-- Thread Replies List -->
    <div class="divide-y divide-gray-200">
      <% if @thread_comments[:replies].any? %>
        <% @thread_comments[:replies].each do |reply_data| %>
          <div class="p-6">
            <%= render 'alto/comments/thread_reply',
                comment: reply_data[:comment],
                replies: reply_data[:replies] %>
          </div>
        <% end %>
      <% else %>
        <div class="p-6 text-center text-gray-500">
          <div class="text-4xl mb-2">💭</div>
          <p>No replies yet. Be the first to reply to this thread!</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Navigation -->
  <div class="flex justify-between items-center">
    <%= link_to "← Back to #{@ticket.title}", alto.board_ticket_path(@board, @ticket),
        class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
  </div>
</div>
