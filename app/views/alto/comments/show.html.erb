<div class="space-y-6">
  <!-- Thread Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center space-x-3 mb-4">
      <h1 class="text-xl font-bold text-gray-900">ğŸ’¬ Discussion Thread</h1>
    </div>

    <div class="text-sm text-gray-600 mb-4">
      From ticket: <%= link_to @ticket.title, alto.board_ticket_path(@board, @ticket),
                               class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>

    <!-- Original Thread Comment -->
    <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-blue-500">
      <div class="text-sm text-gray-500 mb-2">
        <span class="font-medium text-gray-700"><%= user_display_name(@root_comment.user_id) %></span>
        started this thread Â· <%= time_ago_in_words(@root_comment.created_at) %> ago
      </div>
      <div class="prose max-w-none mb-3">
        <p class="text-gray-700 whitespace-pre-wrap"><%= @root_comment.content %></p>
      </div>

      <!-- Original Comment Upvote -->
      <div class="flex items-center">
        <%= upvote_button(@root_comment, current_user) %>
      </div>
    </div>
  </div>

  <!-- Thread Replies -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">
        Replies (<%= @thread_comments[:replies].size %>)
      </h2>
    </div>

    <!-- Reply Form -->
    <% if can_comment? && @ticket.can_be_commented_on? && @root_comment.can_be_replied_to? %>
      <div class="p-6 border-b border-gray-200 bg-blue-50">
                        <%= form_with url: alto.board_ticket_comments_path(@board, @ticket),
                      method: :post,
                      local: true, class: "space-y-4" do %>
          <%= hidden_field_tag 'comment[parent_id]', @root_comment.id %>

          <div class="text-sm text-gray-600 mb-2">
            Replying to this thread as <span class="font-medium text-gray-700"><%= user_display_name(current_user.id) %></span>
          </div>
          <div>
            <%= text_area_tag 'comment[content]', '', placeholder: "Add your reply to this thread...", rows: 3,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>
          <div class="flex justify-end">
            <%= submit_tag "Post Reply",
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    <% elsif @ticket.locked? %>
      <div class="p-6 border-b border-gray-200 bg-red-50">
        <p class="text-red-600 text-sm">ğŸ”’ This ticket is locked. No new replies can be added.</p>
      </div>
    <% elsif !@root_comment.can_be_replied_to? %>
      <div class="p-6 border-b border-gray-200 bg-yellow-50">
        <p class="text-yellow-600 text-sm">âš ï¸ This thread has reached the maximum reply depth.</p>
      </div>
    <% end %>

    <!-- Thread Replies List -->
    <div class="divide-y divide-gray-200">
      <% if @thread_comments[:replies].any? %>
        <% @thread_comments[:replies].each do |reply_data| %>
          <div class="p-6">
            <%= render 'alto/comments/thread_reply',
                comment: reply_data[:comment],
                replies: reply_data[:replies] %>
          </div>
        <% end %>
      <% else %>
        <div class="p-6 text-center text-gray-500">
          <div class="text-4xl mb-2">ğŸ’­</div>
          <p>No replies yet. Be the first to reply to this thread!</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Navigation -->
  <div class="flex justify-between items-center">
    <%= link_to "â† Back to #{@ticket.title}", alto.board_ticket_path(@board, @ticket),
        class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
  </div>
</div>
