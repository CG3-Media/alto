<% if ::Alto.configuration.image_uploads_enabled %>
  <div class="image-upload-component" id="image-upload-<%= SecureRandom.hex(4) %>">
    <% form_field_name = local_assigns[:field_name] || :images %>
    <% record = local_assigns[:record] %>
    <% has_existing_image = record&.images&.attached? %>

    <!-- Hidden file input -->
    <%= form.file_field form_field_name,
        direct_upload: true,
        multiple: false,
        accept: "image/png,image/jpeg,image/jpg",
        class: "hidden image-file-input" %>

        <!-- Upload Button (shown when no image) -->
    <div class="upload-button-container"
         style="<%= 'display: none;' if has_existing_image %>">
      <button type="button"
              class="upload-trigger inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
        </svg>
        Upload image
      </button>
      <div class="mt-2 text-sm text-gray-500">
        *.png, *.jpeg files up to 10MB at least 400px by 400px
      </div>
    </div>

    <!-- Image Preview (shown when image exists) -->
    <div class="image-preview-container"
         data-target="image-upload.previewContainer"
         style="<%= 'display: none;' unless has_existing_image %>">

      <% if has_existing_image %>
        <div class="relative inline-block">
          <div class="border border-gray-200 rounded-lg overflow-hidden bg-gray-50">
            <%= image_tag record.images.first,
                class: "w-32 h-32 object-cover",
                data: { target: "image-upload.previewImage" } %>
          </div>

          <!-- Remove button -->
          <button type="button"
                  class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500"
                  data-action="click->image-upload#removeImage"
                  title="Remove image">
            Ã—
          </button>
        </div>

        <!-- Replace button -->
        <div class="mt-2">
          <button type="button"
                  class="text-sm text-blue-600 hover:text-blue-800 underline"
                  data-action="click->image-upload#triggerFileSelect">
            Replace image
          </button>
        </div>
      <% end %>
    </div>

    <!-- Loading state -->
    <div class="upload-loading"
         data-target="image-upload.loadingContainer"
         style="display: none;">
      <div class="flex items-center space-x-2 text-sm text-gray-600">
        <svg class="animate-spin h-4 w-4" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>Uploading...</span>
      </div>
    </div>

    <!-- Error message -->
    <div class="upload-error mt-2 text-sm text-red-600"
         data-target="image-upload.errorContainer"
         style="display: none;">
    </div>

    <!-- Hidden field to mark image for removal -->
    <%= form.hidden_field :remove_images,
        value: "false",
        data: { target: "image-upload.removeField" } %>
  </div>
<% end %>
