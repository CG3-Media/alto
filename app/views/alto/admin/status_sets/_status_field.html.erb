<div class="status-field border border-gray-200 rounded-lg p-4 bg-gray-50">
  <%= form.hidden_field :_destroy, value: false %>
  <%= form.hidden_field :position %>

  <div class="flex justify-between items-start mb-3">
    <h4 class="text-sm font-medium text-gray-700">
      Status <%= form.object.position.to_i + 1 if form.object.position.present? %>
    </h4>
    <button type="button" class="remove-status text-red-600 hover:text-red-800 text-sm">
      âœ• Remove
    </button>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Status Name -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Status Name <span class="text-red-500">*</span>
      </label>
      <%= form.text_field :name,
          placeholder: "e.g., Open, In Progress, Complete",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          required: true %>
    </div>

    <!-- Status Slug -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Slug <span class="text-red-500">*</span>
      </label>
      <%= form.text_field :slug,
          placeholder: "e.g., open, in_progress, complete",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono text-sm",
          required: true %>
      <p class="mt-1 text-xs text-gray-500">URL-friendly identifier (lowercase, underscores/hyphens)</p>
    </div>

    <!-- Color -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Color <span class="text-red-500">*</span>
      </label>
      <%= form.select :color,
          options_for_select([
            ['ðŸŸ¢ Green', 'green'],
            ['ðŸ”µ Blue', 'blue'],
            ['ðŸŸ¡ Yellow', 'yellow'],
            ['ðŸ”´ Red', 'red'],
            ['âšª Gray', 'gray'],
            ['ðŸŸ£ Purple', 'purple'],
            ['ðŸŸ  Orange', 'orange'],
            ['ðŸ©· Pink', 'pink']
          ], form.object.color),
          { prompt: 'Select a color' },
          { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
    </div>

    <!-- Position (hidden, managed by order) -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Position
      </label>
      <%= form.number_field :position,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          min: 0,
          readonly: true %>
      <p class="mt-1 text-xs text-gray-500">Order in workflow (automatically set)</p>
    </div>
  </div>

  <!-- Color Preview -->
  <div class="mt-3">
    <div class="flex items-center space-x-2">
      <span class="text-sm text-gray-600">Preview:</span>
      <% if form.object.color.present? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= case form.object.color
          when 'green' then 'bg-green-100 text-green-800'
          when 'blue' then 'bg-blue-100 text-blue-800'
          when 'yellow' then 'bg-yellow-100 text-yellow-800'
          when 'red' then 'bg-red-100 text-red-800'
          when 'gray' then 'bg-gray-100 text-gray-800'
          when 'purple' then 'bg-purple-100 text-purple-800'
          when 'orange' then 'bg-orange-100 text-orange-800'
          when 'pink' then 'bg-pink-100 text-pink-800'
          else 'bg-gray-100 text-gray-800'
          end %>">
          <%= form.object.name.presence || 'Status Name' %>
        </span>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
          <%= form.object.name.presence || 'Status Name' %>
        </span>
      <% end %>
    </div>
  </div>
</div>
