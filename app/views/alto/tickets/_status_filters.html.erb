<div class="flex flex-wrap gap-2">
  <%= link_to "All", filter_url(@board, status: nil, tag: nil),
      class: filter_button_classes(active: params[:status].blank? && params[:tag].blank?) %>

  <% if @board.has_status_tracking? %>
    <% @statuses.each do |status| %>
      <%= link_to status.name, filter_url(@board, status: status.slug),
          class: filter_button_classes(active: params[:status] == status.slug) %>
    <% end %>
  <% end %>
</div>
