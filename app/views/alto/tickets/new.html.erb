<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Submit New <%= @board.item_name.capitalize %> to <%= @board.name %></h1>
      <p class="text-gray-600">Share your ideas, feedback, or information with the community.</p>
    </div>

    <%= form_with model: [@board, @ticket], local: true, class: "space-y-6" do |form| %>
      <% if @ticket.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@ticket.errors.count, "error") %> prohibited this <%= @board.item_name %> from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% @ticket.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%= render 'shared/forms/input',
          form: form,
          field_name: :title,
          placeholder: "Brief, descriptive title for your " + @board.item_name,
          model: @ticket,
          required: true %>

      <%= render 'shared/forms/text_area',
          form: form,
          field_name: :description,
          placeholder: "Provide detailed information about your " + @board.item_name + ". Include relevant context, steps, examples, or background information.",
          rows: 6,
          model: @ticket,
          helper_text: "Be as specific and clear as possible. Well-detailed " + @board.item_name.pluralize + " help others understand and respond effectively.",
          required: true %>

      <!-- Image Upload -->
      <% if ::Alto.configuration.image_uploads_enabled %>
        <div>
          <%= form.label :images, "Attach Image (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.file_field :images,
              direct_upload: true,
              multiple: false,
              accept: "image/jpeg,image/png,image/gif,image/webp",
              class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">
            You can attach one image (JPEG, PNG, GIF, or WebP). Maximum file size: 5MB.
          </p>
        </div>
      <% end %>

      <!-- Status Selection (if board has status tracking) -->
      <% if @board.has_status_tracking? && can_access_admin? %>
        <div>
          <%= form.label :status_slug, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :status_slug,
              options_for_select(@board.status_options_for_select_filtered(is_admin: can_access_admin?), @ticket.status_slug || @board.default_status_slug),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          <p class="mt-1 text-sm text-gray-500">Set the initial status for this <%= @board.item_name %></p>
        </div>
      <% end %>

            <!-- Tag Selection -->
      <% if can_assign_tags? %>
        <%= render 'alto/shared/forms/multi_select',
            form: form,
            model: @ticket,
            field_name: :tag_ids,
            available_items: @board.tags.ordered,
            selected_items: @ticket.tags,
            label: "Tags",
            placeholder: "Search and select tags...",
            item_display_method: :name,
            item_icon_method: nil,
            help_text: nil %>
      <% end %>

      <!-- Custom Fields -->
      <% if @board.fields.any? %>
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">ðŸ“‹ Additional Information</h3>
          <div class="space-y-4">
            <% @board.fields.sort_by { |field| field.position || 0 }.each do |field| %>
              <%= render 'alto/shared/custom_board_fields', field: field, ticket: @ticket, form: form %>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="flex items-center justify-between pt-4">
        <%= render 'shared/buttons/tertiary',
            text: "Cancel",
            url: alto.board_tickets_path(@board) %>

        <div class="flex space-x-3">
          <%= render 'shared/buttons/primary',
              text: "Submit " + @board.item_name.capitalize,
              type: "submit",
              size: "medium",
              additional_classes: "px-6" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Tips Card -->
  <div class="mt-6 bg-blue-50 rounded-lg p-4">
    <h3 class="text-sm font-medium text-blue-800 mb-2">ðŸ’¡ Tips for great <%= @board.item_name.pluralize %></h3>
    <ul class="text-sm text-blue-700 space-y-1">
      <li>â€¢ Be specific and descriptive in your title</li>
      <li>â€¢ Include relevant details and context</li>
      <li>â€¢ Provide examples or steps when applicable</li>
      <li>â€¢ Keep one main idea per <%= @board.item_name %> for better organization</li>
      <% if @board.fields.any? %>
        <li>â€¢ Fill out the additional fields to help others understand your <%= @board.item_name %></li>
      <% end %>
    </ul>
  </div>
</div>
