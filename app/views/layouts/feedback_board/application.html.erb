<!DOCTYPE html>
<html>
  <head>
    <title><%= app_name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- FeedbackBoard CSS -->
    <%= stylesheet_link_tag 'feedback_board/application', 'data-turbo-track': 'reload' %>

    <!-- Tailwind CSS for FeedbackBoard styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Rails UJS for handling method: :delete links (nobuild approach) -->
    <script src="https://cdn.jsdelivr.net/npm/@rails/ujs@7.1.3-4/app/assets/javascripts/rails-ujs.min.js"></script>
    <script>Rails.start()</script>

    <!-- FeedbackBoard JavaScript (nobuild approach) -->
    <% if defined?(Importmap) %>
      <%= javascript_importmap_tags %>
      <script type="module">
        import "feedback_board"
      </script>
    <% else %>
      <%= javascript_include_tag 'feedback_board/application', 'data-turbo-track': 'reload' %>
    <% end %>

    <!-- Host app assets -->
    <%= vite_client_tag if defined?(vite_client_tag) %>
    <%= vite_javascript_tag 'application' if defined?(vite_javascript_tag) %>
  </head>

    <body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <%= render 'shared/header' %>

    <!-- Sidebar -->
    <% unless controller_name == 'tickets' && action_name == 'new' %>
      <%= render 'shared/sidebar' %>
    <% end %>

    <main class="<%= controller_name == 'tickets' && action_name == 'new' ? 'pt-20' : 'lg:pl-64 pt-20' %>">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <% if notice %>
          <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md">
            <%= notice %>
          </div>
        <% end %>

        <% if alert %>
          <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
            <%= alert %>
          </div>
        <% end %>

                <!-- Breadcrumbs -->
        <% unless (controller_name == 'tickets' && action_name == 'index') || (controller_name == 'boards' && action_name == 'new' && params[:controller] == 'feedback_board/admin/boards') %>
          <%= render 'shared/breadcrumbs' %>
        <% end %>

        <%= yield %>
      </div>
    </main>
  </body>
</html>
