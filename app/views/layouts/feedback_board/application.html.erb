<!DOCTYPE html>
<html>
  <head>
    <title><%= app_name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- FeedbackBoard CSS -->
    <%= stylesheet_link_tag 'feedback_board/application', 'data-turbo-track': 'reload' %>

    <!-- Tailwind CSS for FeedbackBoard styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Rails UJS for handling method: :delete links (nobuild approach) -->
    <script src="https://cdn.jsdelivr.net/npm/@rails/ujs@7.1.3-4/app/assets/javascripts/rails-ujs.min.js"></script>
    <script>Rails.start()</script>

    <!-- FeedbackBoard JavaScript (nobuild approach) -->
    <% if defined?(Importmap) %>
      <%= javascript_importmap_tags %>
      <script type="module">
        import "feedback_board"
      </script>
    <% else %>
      <%= javascript_include_tag 'feedback_board/application', 'data-turbo-track': 'reload' %>
    <% end %>

    <!-- Host app assets -->
    <%= vite_client_tag if defined?(vite_client_tag) %>
    <%= vite_javascript_tag 'application' if defined?(vite_javascript_tag) %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center space-x-6">
            <%= link_to feedback_board.root_path, class: "text-xl font-semibold text-gray-900" do %>
              üó£Ô∏è <%= app_name %>
            <% end %>

            <!-- Board Navigation -->
            <% boards = FeedbackBoard::Board.ordered.limit(4) %>
            <% if boards.any? %>
              <!-- Desktop Board Navigation -->
              <div class="hidden md:flex items-center space-x-1 text-sm">
                <% boards.first(3).each do |board| %>
                  <%= link_to board.name, feedback_board.board_tickets_path(board),
                      class: "px-3 py-1 rounded-md #{ board == current_board ? 'bg-blue-100 text-blue-700 font-medium' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100' }" %>
                <% end %>
                <% if boards.count > 3 %>
                  <%= link_to "All Boards", feedback_board.boards_path,
                      class: "px-3 py-1 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 border border-gray-300" %>
                <% end %>
              </div>

              <!-- Mobile Board Selector -->
              <div class="md:hidden">
                <%= form_with url: "#", method: :get, local: true, class: "flex items-center" do |form| %>
                  <%= form.select :board,
                      options_from_collection_for_select(FeedbackBoard::Board.ordered, :slug, :name, current_board.slug),
                      {},
                      {
                        class: "text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                        onchange: "window.location.href = '/feedback/boards/' + this.value + '/tickets'"
                      } %>
                <% end %>
              </div>
            <% end %>
          </div>
          <nav class="flex space-x-4">
            <%= link_to "All Tickets", feedback_board.board_tickets_path(current_board),
                class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>

            <% if can_access_admin? %>
              <%= render 'shared/buttons/primary',
                  text: "Admin",
                  url: feedback_board.admin_root_path,
                  additional_classes: "bg-purple-600 hover:bg-purple-700" %>
            <% end %>
          </nav>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <% if notice %>
        <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md">
          <%= notice %>
        </div>
      <% end %>

      <% if alert %>
        <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
          <%= alert %>
        </div>
      <% end %>

      <!-- Breadcrumbs -->
      <%= render 'shared/breadcrumbs' %>

      <%= yield %>
    </main>
  </body>
</html>
