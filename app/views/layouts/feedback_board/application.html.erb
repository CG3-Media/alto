<!DOCTYPE html>
<html>
  <head>
    <title><%= app_name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- FeedbackBoard CSS -->
    <%= stylesheet_link_tag 'feedback_board/application', 'data-turbo-track': 'reload' %>

    <!-- Tailwind CSS for FeedbackBoard styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Rails UJS for handling method: :delete links (nobuild approach) -->
    <script src="https://cdn.jsdelivr.net/npm/@rails/ujs@7.1.3-4/app/assets/javascripts/rails-ujs.min.js"></script>
    <script>Rails.start()</script>

    <!-- FeedbackBoard JavaScript (nobuild approach) -->
    <% if defined?(Importmap) %>
      <%= javascript_importmap_tags %>
      <script type="module">
        import "feedback_board"
      </script>
    <% else %>
      <%= javascript_include_tag 'feedback_board/application', 'data-turbo-track': 'reload' %>
    <% end %>

    <!-- Host app assets -->
    <%= vite_client_tag if defined?(vite_client_tag) %>
    <%= vite_javascript_tag 'application' if defined?(vite_javascript_tag) %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <header class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 lg:pl-72">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center space-x-6">
            <!-- Mobile menu button -->
            <button onclick="toggleMobileSidebar()" class="lg:hidden -ml-2 mr-2 p-2 text-gray-600 hover:text-gray-900">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>

            <!-- App Name/Logo -->
            <%= link_to feedback_board.root_path, class: "text-xl font-semibold text-gray-900" do %>
              üó£Ô∏è <%= app_name %>
            <% end %>
          </div>

          <!-- Right side: Admin access only -->
          <nav class="flex space-x-4">
            <% if can_access_admin? %>
              <%= render 'shared/buttons/primary',
                  text: "Admin",
                  url: feedback_board.admin_root_path,
                  additional_classes: "bg-purple-600 hover:bg-purple-700" %>
            <% end %>
          </nav>
        </div>
      </div>
    </header>

    <!-- Sidebar -->
    <%= render 'shared/sidebar' %>

    <main class="lg:pl-64 pt-20">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <% if notice %>
          <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md">
            <%= notice %>
          </div>
        <% end %>

        <% if alert %>
          <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
            <%= alert %>
          </div>
        <% end %>

        <!-- Breadcrumbs -->
        <%= render 'shared/breadcrumbs' %>

        <%= yield %>
      </div>
    </main>
  </body>
</html>
