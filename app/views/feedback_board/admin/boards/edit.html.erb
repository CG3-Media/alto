<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">✏️ Edit Board: <%= @board.name %></h1>
    <%= link_to "← Back to Boards", feedback_board.admin_boards_path,
        class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= render 'form' %>
  </div>

  <% if @board.slug != 'feedback' %>
    <div class="bg-white shadow rounded-lg p-6 border-l-4 border-red-400">
      <h3 class="text-lg font-medium text-gray-900 mb-2">⚠️ Danger Zone</h3>
      <p class="text-gray-600 mb-4">
        Deleting this board will permanently remove it and may affect associated tickets.
      </p>
      <%= link_to "Delete Board", feedback_board.admin_board_path(@board),
          method: :delete,
          confirm: "Are you sure you want to delete '#{@board.name}'? This action cannot be undone.",
          class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
    </div>
  <% end %>
</div>
