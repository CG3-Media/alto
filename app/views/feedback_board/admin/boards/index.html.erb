<div class="space-y-6">
  <%= render 'shared/page_header',
      title: "ğŸ—‚ï¸ Manage Boards",
      actions: [
        {
          type: :link,
          text: "New Board",
          path: feedback_board.new_admin_board_path,
          class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium"
        },
        {
          type: :link,
          text: "Dashboard",
          path: feedback_board.admin_root_path,
          class: "bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-md text-sm font-medium"
        }
      ] %>

  <!-- Boards Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Board
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Tickets
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Created
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @board_stats.each do |stat| %>
          <% board = stat[:board] %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div>
                <div class="text-sm font-medium text-gray-900">
                  <%= link_to board.name, feedback_board.board_tickets_path(board),
                      class: "hover:text-blue-600" %>
                </div>
                <div class="text-sm text-gray-500">/<%= board.slug %></div>
                <% if board.description.present? %>
                  <div class="text-sm text-gray-500 mt-1">
                    <%= truncate(board.description, length: 60) %>
                  </div>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">
                <%= stat[:tickets_count] %> tickets
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(board.created_at) %> ago
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
              <%= link_to "Edit", feedback_board.edit_admin_board_path(board.id),
                  class: "text-blue-600 hover:text-blue-900" %>
              <% unless board.slug == 'feedback' %>
                <%= link_to "Delete", feedback_board.admin_board_path(board.id),
                    method: :delete,
                    confirm: "Are you sure? This will delete the board and may affect tickets.",
                    class: "text-red-600 hover:text-red-900" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @board_stats.empty? %>
    <div class="text-center py-12">
      <div class="text-gray-500">
        <p class="text-lg">No boards found</p>
        <p class="mt-2">Create your first board to get started!</p>
      </div>
    </div>
  <% end %>
</div>
