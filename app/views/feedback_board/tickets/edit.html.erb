<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Edit Ticket</h1>
      <p class="text-gray-600">Update ticket details, status, and moderation settings.</p>
    </div>

    <%= form_with model: [@board, @ticket], local: true, class: "space-y-6" do |form| %>
      <% if @ticket.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% @ticket.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent #{'border-red-300' if @ticket.errors[:title].any?}" %>
        <% if @ticket.errors[:title].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @ticket.errors[:title].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description,
            rows: 6,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent #{'border-red-300' if @ticket.errors[:description].any?}" %>
        <% if @ticket.errors[:description].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @ticket.errors[:description].first %></p>
        <% end %>
      </div>

      <!-- Admin Controls -->
      <% if can_edit_tickets? %>
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Admin Controls</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :status,
                  options_for_select(FeedbackBoard::Ticket::STATUSES.map { |status| [status.humanize, status] }, @ticket.status),
                  {},
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
              <p class="mt-1 text-sm text-gray-500">Update the ticket status to reflect progress</p>
            </div>

            <div>
              <%= form.label :locked, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="flex items-center space-x-3">
                <%= form.check_box :locked, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <span class="text-sm text-gray-700">Lock ticket (prevents comments and votes)</span>
              </div>
              <p class="mt-1 text-sm text-gray-500">Lock to prevent further discussion</p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="flex items-center justify-between pt-4">
        <div class="flex space-x-3">
          <%= link_to "Cancel", feedback_board.board_ticket_path(@board, @ticket),
              class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
          <%= link_to "View Ticket", feedback_board.board_ticket_path(@board, @ticket),
              class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        </div>

        <div class="flex space-x-3">
          <%= form.submit "Update Ticket",
              class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Status Guide -->
  <div class="mt-6 bg-gray-50 rounded-lg p-4">
    <h3 class="text-sm font-medium text-gray-800 mb-3">ðŸ“‹ Status Guide</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
      <div class="flex items-center space-x-2">
        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Open</span>
        <span class="text-gray-600">New feedback, not yet reviewed</span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">Planned</span>
        <span class="text-gray-600">Accepted and scheduled for development</span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">In Progress</span>
        <span class="text-gray-600">Currently being worked on</span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Complete</span>
        <span class="text-gray-600">Finished and deployed</span>
      </div>
    </div>
  </div>
</div>
