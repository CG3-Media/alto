<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900"><%= @board.name %> Tickets</h1>
    <div class="flex items-center space-x-4">
      <% if can_submit_tickets? %>
        <%= link_to "New Ticket", feedback_board.new_board_ticket_path(@board),
            class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      <% end %>
    </div>
  </div>

  <!-- Search Form -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
    <%= form_with url: feedback_board.board_tickets_path(@board), method: :get, local: true, class: "flex items-center space-x-4" do |form| %>
      <div class="flex-1">
        <%= form.text_field :search,
            value: @search_query,
            placeholder: "Search tickets by title, description, or comments...",
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <%= form.hidden_field :status, value: params[:status] %>
      <%= form.hidden_field :sort, value: params[:sort] %>
      <div class="flex space-x-2">
        <%= form.submit "Search", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        <% if @search_query.present? %>
          <%= link_to "Clear", feedback_board.board_tickets_path(@board, status: params[:status], sort: params[:sort]),
              class: "bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-md text-sm font-medium" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Status Filter with Recent/Popular alignment -->
  <div class="flex justify-between items-center flex-wrap gap-2">
    <div class="flex flex-wrap gap-2">
      <%= link_to "All", feedback_board.board_tickets_path(@board, search: params[:search], sort: params[:sort]),
          class: "px-3 py-1 text-sm rounded-full border #{'bg-gray-900 text-white' if params[:status].blank?} #{'bg-white text-gray-700 hover:bg-gray-50' unless params[:status].blank?}" %>
      <% @statuses.each do |status| %>
        <%= link_to status.humanize, feedback_board.board_tickets_path(@board, status: status, search: params[:search], sort: params[:sort]),
            class: "px-3 py-1 text-sm rounded-full border #{'bg-gray-900 text-white' if params[:status] == status} #{'bg-white text-gray-700 hover:bg-gray-50' unless params[:status] == status}" %>
      <% end %>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Recent", feedback_board.board_tickets_path(@board, sort: 'recent', search: params[:search], status: params[:status]),
          class: "px-3 py-2 text-sm rounded-md #{'bg-blue-100 text-blue-700' if params[:sort] != 'popular'} #{'text-gray-600 hover:text-gray-900' if params[:sort] == 'popular'}" %>
      <%= link_to "Popular", feedback_board.board_tickets_path(@board, sort: 'popular', search: params[:search], status: params[:status]),
          class: "px-3 py-2 text-sm rounded-md #{'bg-blue-100 text-blue-700' if params[:sort] == 'popular'} #{'text-gray-600 hover:text-gray-900' if params[:sort] != 'popular'}" %>
    </div>
  </div>

  <!-- Search Results Info -->
  <% if @search_query.present? %>
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
      <div class="flex">
        <div class="ml-3">
          <p class="text-sm text-blue-700">
            <span class="font-medium">Search results for:</span> "<%= @search_query %>"
            <% if @tickets.respond_to?(:total_count) %>
              ‚Ä¢ <%= pluralize(@tickets.total_count, 'ticket') %> found
            <% else %>
              ‚Ä¢ <%= pluralize(@tickets.count, 'ticket') %> found
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Tickets List -->
  <div class="space-y-4">
    <% if @tickets.any? %>
      <% @tickets.each do |ticket| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h3 class="text-lg font-semibold text-gray-900">
                  <%= link_to ticket.title, feedback_board.board_ticket_path(@board, ticket), class: "hover:text-blue-600" %>
                </h3>
                <span class="px-2 py-1 text-xs font-medium rounded-full
                  <%= case ticket.status
                      when 'open' then 'bg-green-100 text-green-800'
                      when 'planned' then 'bg-blue-100 text-blue-800'
                      when 'in_progress' then 'bg-yellow-100 text-yellow-800'
                      when 'complete' then 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= ticket.status.humanize %>
                </span>
                <% if ticket.locked? %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                    üîí Locked
                  </span>
                <% end %>
              </div>
              <p class="text-gray-600 text-sm mb-3 line-clamp-2">
                <%= truncate(ticket.description, length: 150) %>
              </p>
              <div class="flex items-center space-x-4 text-sm text-gray-500">
                <span>By <span class="font-medium text-gray-700"><%= user_display_name(ticket.user_id) %></span></span>
                <span><%= time_ago_in_words(ticket.created_at) %> ago</span>
                <span><%= pluralize(ticket.comments.count, 'comment') %></span>
              </div>
            </div>

            <!-- Upvote Button -->
            <div class="flex flex-col items-center ml-4">
              <%= upvote_button(ticket, current_user) %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <% if @search_query.present? %>
          <div class="text-gray-400 text-6xl mb-4">üîç</div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No tickets found</h3>
          <p class="text-gray-500 mb-4">
            No tickets match your search for "<%= @search_query %>".
            <br>Try different keywords or <%= link_to "browse all tickets", feedback_board.board_tickets_path(@board, status: params[:status], sort: params[:sort]), class: "text-blue-600 hover:text-blue-500" %>.
          </p>
        <% else %>
          <div class="text-gray-400 text-6xl mb-4">üìù</div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No tickets yet</h3>
          <p class="text-gray-500 mb-4">Be the first to submit feedback!</p>
          <% if can_submit_tickets? %>
            <%= link_to "Create First Ticket", feedback_board.new_board_ticket_path(@board),
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
