<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Submit New Feedback to <%= @board.name %></h1>
      <p class="text-gray-600">Help us improve by sharing your suggestions, bug reports, or feature requests.</p>
    </div>

    <%= form_with model: [@board, @ticket], local: true, class: "space-y-6" do |form| %>
      <% if @ticket.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% @ticket.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%= render 'shared/forms/input',
          form: form,
          field_name: :title,
          placeholder: "Brief, descriptive title of your feedback",
          model: @ticket,
          required: true %>

      <%= render 'shared/forms/text_area',
          form: form,
          field_name: :description,
          placeholder: "Provide detailed information about your feedback. What happened? What did you expect? Include steps to reproduce if it's a bug.",
          rows: 6,
          model: @ticket,
          helper_text: "Be as specific as possible. Good feedback helps us understand and address your needs better.",
          required: true %>

      <div class="flex items-center justify-between pt-4">
        <%= render 'shared/buttons/tertiary',
            text: "Cancel",
            url: feedback_board.board_tickets_path(@board) %>

        <div class="flex space-x-3">
          <%= render 'shared/buttons/primary',
              text: "Submit Feedback",
              type: "submit",
              size: "medium",
              additional_classes: "px-6" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Tips Card -->
  <div class="mt-6 bg-blue-50 rounded-lg p-4">
    <h3 class="text-sm font-medium text-blue-800 mb-2">ðŸ’¡ Tips for great feedback</h3>
    <ul class="text-sm text-blue-700 space-y-1">
      <li>â€¢ Be specific and descriptive in your title</li>
      <li>â€¢ Include steps to reproduce bugs</li>
      <li>â€¢ Explain the expected vs actual behavior</li>
      <li>â€¢ One idea per ticket for better tracking</li>
    </ul>
  </div>
</div>
